<%= form_with model: listing, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: listing.title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, value: listing.description %>
    </div>
    <div>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0, value: listing.price %>
    </div>
    <div>
        <%= form.label :deposit %>
        <%= form.number_field :deposit, min: 0, value: listing.deposit %>
    </div>
    <div>
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth, value: listing.date_of_birth %>
    </div>
    <div>
        <%= form.label :diet %>
        <%= form.text_field :diet, value: listing.diet %>
    </div>
    <div>
        <%= form.label :breed_id %>
        <%= form.select(:breed_id, breeds.map{|b| [b.name, b.id]}) %>
    </div>

    <% sexes.each do |option| %>
        <div>
            <%= form.radio_button :sex, option %>
            <%= form.label "sex_#{option}".to_sym, option, value: listing.sex %>
        <div>
    <% end %>

    <div>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg", value: listing.picture %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>